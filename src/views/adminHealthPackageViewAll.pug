doctype
html(lang='en')
   head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title='Virtual Clinic | Health Packages' 
      link(rel='stylesheet', href= 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css',
      integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')

   body 
      h3 Health Packages
      a(href='/admin/addHealthPackage') Add new package
      if count < 1
         p There are no health packages to view.
      else
         table 
            thead
               tr
                  th Name 
                  th .
            tbody
               each healthPackage in healthPackages 
                  tr 
                     td #{healthPackage.name}
                     td: a(href=`/admin/healthPackage?id=${healthPackage._id}`) View