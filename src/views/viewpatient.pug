doctype
html(lang='en')
    head
     meta(charset='utf-8')
     meta(name='viewport', content='width=device-width, initial-scale=1.0')
     title='Pharmacy | View Patient Info' 
     link(rel='stylesheet', href= 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css',
      integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
     style.
        = {
            width= 600px
            margin: 0 auto;
         }
             
    


    body 
     h3 Patients
     table 
        thead
        tr
         th Username 
         th Name 
         th Email 
         th Date of Birth 
         th Mobile 
         th Emergency Contact 
         th Name 
         th Mobile 
         th Relation
        tbody
         each patient in patients
          tr 
           td #{patient.username}
           td #{patient.name}
           td #{patient.email}
           td #{patient.dateOfBirth}
           td #{patient.mobile}
           td 
           td #{patient.emergencyContact.name}
           td #{patient.emergencyContact.mobile}
           td #{patient.emergencyContact.relation}
          



