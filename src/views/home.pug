doctype
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title='Virtual Clinic | Home' 
        link(rel='stylesheet', href= 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css',
        integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    
    body
        h2 Home Page for type #{userType}
        case userType
            when 'admin'
                include includes/adminHome.pug 
            when 'patient'
                include includes/patientHome.pug
            when 'doctor'
                include includes/doctorHome.pug
            when 'pharmacist'
                include includes/pharmacistHome.pug
