doctype
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title='Virtual Clinic | Login' 
        link(rel='stylesheet', href= 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css',
        integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    
    body
        form(action='/user/login' method='POST')
            .form-group
                label(for='username') Username
                input.form-control(type='text', name='username' placeholder='Username' autofocus=true required)
            .form-group
                label(for='password') Password
                input.form-control(type='password', name='password' required)
            button.btn.btn-primary(type='submit') Login
            br
            a(href='/register') Register new account.